#include <stdio.h>

int main() {
    int T, X, Y;
    scanf("%d", &T); 

    for (int i = 0; i < T; i++) {
        scanf("%d %d", &X, &Y);

        int sum = 0;
        int start = X < Y ? X + 1 : Y + 1;
        int end = X < Y ? Y : X;

        for (int j = start; j < end; j++) {
            if (j % 2 != 0) {
                sum += j;
            }
        }

        printf("%d\n", sum);
    }

    return 0;
}
